namespace Model
{
    /// <summary>
    /// ユースケース：システム起動
    /// </summary>
    /// <remarks>
    /// ・起動中表示
    /// ・起動過程の進捗状況表示
    /// ・完了ダイアログ表示
    /// </remarks>
    public class UseCase1 : UseCaseBase
    {
        [DataContract]
        public class Display : ModelBase
        {
            [DataMember]
            public string ViewID = "UseCase1-1";
